<!DOCTYPE html>
<html>
  <%- include('partials/head.ejs') %>
  <body>
    <%- include('partials/navbar.ejs', { links: links, currentUser: currentUser
    }) %>
    <div class="container mt-5 pt-4">
      <div class="card mb-4">
        <div class="row no-gutters">
          <div class="col-md-4">
            <% if (recipe.imageUrl) { %>
            <img
              src="<%= recipe.imageUrl %>"
              class="card-img"
              alt="<%= recipe.name %>"
            />
            <% } else { %>
            <img
              src="/default-recipe-image.jpg"
              class="card-img"
              alt="Default Image"
            />
            <% } %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h1 class="card-title text-uppercase"><%= recipe.name %></h1>
              <p class="card-text">
                <strong>Description:</strong> <%= recipe.description %>
              </p>
              <p class="card-text">
                <strong>Category:</strong> <%= recipe.category %>
              </p>
              <p class="card-text"><strong>Tags:</strong> <%= recipe.tag %></p>
              <p class="card-text">
                <strong>Servings:</strong> <%= recipe.servings %>
              </p>
              <p class="card-text">
                <strong>Prep Time:</strong> <%= recipe.prep_time %> minutes
              </p>
              <p class="card-text">
                <strong>Cook Time:</strong> <%= recipe.cook_time %> minutes
              </p>
              <p class="card-text">
                <strong>Source:</strong>
                <a href="<%= recipe.source %>" target="_blank"
                  ><%= recipe.source %></a
                >
              </p>
              <h2 class="card-title">Ingredients</h2>
              <p class="card-text"><%- ingredientsHtml %></p>
              <h2 class="card-title">Method</h2>
              <p class="card-text"><%- methodHtml %></p>
              <h2 class="card-title">Notes</h2>
              <p class="card-text"><%= recipe.notes %></p>
              <a
                class="btn btn-primary"
                href="/recipes/<%= recipe.id %>/edit"
                role="button"
                >Edit recipe</a
              >
              <form
                action="/recipes/<%= recipe.id %>/delete"
                method="POST"
                class="d-inline"
              >
                <button
                  type="submit"
                  onclick="return confirm('Are you sure you want to delete this recipe?');"
                  class="btn btn-danger"
                >
                  Delete
                </button>
              </form>
              <a class="btn btn-secondary" href="/recipes" role="button"
                >Back to all recipes</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
